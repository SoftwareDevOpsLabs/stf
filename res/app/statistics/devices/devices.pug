div.page-controller(ng-controller='DeviceStatCtrl')
  div.query-filter-item
    div
      div.form-group.date-item
        div.date-item-title 开始时间
        div.input-group.date-input
          input.form-control(type='text',ng-change='submitQuery()',uib-datepicker-popup='{{format}}',ng-model='start_time',is-open='popup1.opened',ng-required='true',close-text='关闭',clear-text='清空',current-text='今天',datepicker-options='options',alt-input-formats='altInputFormats')
          span.input-group-btn
            button.btn.btn-primary(type='button',ng-click='open1()')
              i.glyphicon.glyphicon-calendar
      div.form-group.date-item
        div.date-item-title 结束时间
        div.input-group.date-input
          input.form-control(type='text',ng-change='submitQuery()',uib-datepicker-popup='{{format}}',ng-model='end_time',is-open='popup2.opened',ng-required='true',close-text='关闭',clear-text='清空',current-text='今天',datepicker-options='options',alt-input-formats='altInputFormats')
          span.input-group-btn
            button.btn.btn-primary(type='button',ng-click='open2()')
              i.glyphicon.glyphicon-calendar

    div.chart-types
      div.date-item-title 视图维度
      div.chart-type-item(ng-repeat='type in types',ng-class='active_type_index==$index?"active":""',ng-click='showActiveType(this)')
        div(ng-bind='type')


  div#chart_panel_full
    div.chart_container
        h5 设备使用时长的统计图
        div#bar_chart_device

